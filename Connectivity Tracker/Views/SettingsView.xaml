<UserControl x:Class="Connectivity_Tracker.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Connectivity_Tracker.Views"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Settings / Einstellungen"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#333"
                   Margin="0,0,0,20"/>

        <!-- Content Area -->
        <Border Style="{StaticResource Card}"
                Grid.Row="1"
                Background="White">
            <StackPanel>
                <!-- Ping Interval -->
                <TextBlock Text="Ping Settings"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,20">
                    <TextBlock Text="Ping Interval:"
                               VerticalAlignment="Center"
                               Width="150"/>
                    <ComboBox Width="200"
                              Height="30"
                              ItemsSource="{Binding PingIntervalOptions}"
                              SelectedIndex="{Binding SelectedPingIntervalIndex}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,20">
                    <TextBlock Text="Ping Server:"
                               VerticalAlignment="Center"
                               Width="150"/>
                    <ComboBox Width="200"
                              Height="30"
                              ItemsSource="{Binding PingServerOptions}"
                              DisplayMemberPath="Name"
                              SelectedIndex="{Binding SelectedPingServerIndex}"/>
                </StackPanel>

                <!-- Alert Threshold -->
                <TextBlock Text="Alert Settings"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,10,0,10"/>

                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,20">
                    <TextBlock Text="Alert Threshold (ms):"
                               VerticalAlignment="Center"
                               Width="150"/>
                    <TextBox Width="200"
                             Height="30"
                             Padding="5"
                             Text="{Binding AlertThreshold, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <!-- Autostart -->
                <TextBlock Text="Application Settings"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,10,0,10"/>

                <CheckBox Content="Start with Windows"
                          Margin="0,0,0,10"
                          IsChecked="{Binding StartWithWindows}"/>

                <CheckBox Content="Minimize to system tray on startup"
                          Margin="0,0,0,20"
                          IsChecked="{Binding MinimizeToTrayOnStartup}"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal"
                        Margin="0,10,0,0">
                    <Button Content="Save Settings"
                            Style="{StaticResource ModernButton}"
                            Width="180"
                            Command="{Binding SaveCommand}"
                            Margin="0,0,10,0"/>

                    <Button Content="Export Data to CSV"
                            Style="{StaticResource ModernButton}"
                            Width="180"
                            Command="{Binding ExportDataCommand}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
