<UserControl x:Class="Connectivity_Tracker.Views.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Connectivity_Tracker.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="History / Verlauf"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#333"
                   Margin="0,0,0,20"/>

        <!-- Content Area -->
        <Border Style="{StaticResource Card}"
                Grid.Row="1"
                Background="White">
            <StackPanel>
                <TextBlock Text="Connection History Chart"
                          FontSize="20"
                          FontWeight="SemiBold"
                          Margin="0,0,0,15"/>

                <!-- Date Filter Placeholder -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="Date Range:"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>
                    <TextBox Width="150"
                            Height="30"
                            Padding="5"
                            Text="Start Date"
                            Margin="0,0,10,0"/>
                    <TextBox Width="150"
                            Height="30"
                            Padding="5"
                            Text="End Date"/>
                </StackPanel>

                <!-- Chart Placeholder -->
                <Border Height="300"
                       Background="#F5F5F5"
                       CornerRadius="4">
                    <TextBlock Text="[Historical Chart Placeholder]"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Foreground="#999"
                              FontSize="16"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
