<UserControl x:Class="Connectivity_Tracker.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Connectivity_Tracker.Views"
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Dashboard"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#333"
                       Margin="0,0,0,10"/>

            <!-- Context Selector -->
            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,20">
                <TextBlock Text="Current Location:"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <ComboBox Name="ContextComboBox"
                          Width="200"
                          Height="30"
                          SelectedIndex="0"
                          SelectionChanged="ContextComboBox_SelectionChanged">
                    <ComboBoxItem Content="Zuhause"
                                  Tag="Home"/>
                    <ComboBoxItem Content="Zug"
                                  Tag="Train"/>
                    <ComboBoxItem Content="Auto"
                                  Tag="Car"/>
                    <ComboBoxItem Content="Café"
                                  Tag="Cafe"/>
                    <ComboBoxItem Content="Unterwegs"
                                  Tag="OnTheGo"/>
                    <ComboBoxItem Content="Büro"
                                  Tag="Office"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <!-- Content Area -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Live Status Section -->
            <Border Style="{StaticResource Card}"
                    Grid.Row="0"
                    Margin="0,0,0,20"
                    Background="White">
                <StackPanel>
                    <TextBlock Text="Live Status"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding ConnectionStatus}"
                               FontSize="14"
                               Foreground="#666"
                               Margin="0,0,0,15"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Ping Status -->
                        <StackPanel Grid.Column="0"
                                    Margin="0,0,20,0">
                            <TextBlock Text="Latency"
                                       FontSize="14"
                                       Foreground="#666"/>
                            <TextBlock Text="{Binding Latency}"
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="{Binding LatencyColor}"
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Download Rate -->
                        <StackPanel Grid.Column="1"
                                    Margin="0,0,20,0">
                            <TextBlock Text="Download"
                                       FontSize="14"
                                       Foreground="#666"/>
                            <TextBlock Text="{Binding DownloadRate}"
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="#4CAF50"
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Upload Rate -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Upload"
                                       FontSize="14"
                                       Foreground="#666"/>
                            <TextBlock Text="{Binding UploadRate}"
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="#FF9800"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- History Graph -->
            <Border Style="{StaticResource Card}"
                    Grid.Row="1"
                    Background="White">
                <StackPanel>
                    <TextBlock Text="Connection History (Last Hour)"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"/>
                    <oxy:PlotView x:Name="DashboardPlot"
                                  Height="200"
                                  Model="{Binding HistoryPlotModel}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
